@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline d-flex flex-column justify-content-center align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <h1>@ViewData["Title"]</h1>    
                <button type="submit" class="nav-link btn btn-link">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
